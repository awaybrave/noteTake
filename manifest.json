{
  "name" : "Note Take",
  "version" : "1.1",
  "description" : "Taking notes from web pages",
  "background" : {
	"page" : "./html/background.html"
  //  "scripts": ["./js/background.js"]
  },
  "browser_action":{
	"default_icon": "./image/sandwich-19.png",
	"default_popup": "./html/popup.html"
  },
  "content_scripts": [
    {
      "matches" : [
      // "http://*/*",
      // "https://*/*",
		"file:///*/*"
      ],
	  "css": ["./css/lib/reset.css", "./css/lib/functions.css", "./css/lib/popup.css", "./css/note_form.css"],
      "js" : 
	  	["./js/lib/jquery.js", "./js/lib/jquery.popup.min.js", "./js/contentscript.js"]//,
      //"run_at" : "document_idle",
      //"all_frames" : false
    }
  ],
  "permissions":[
  	  "tabs"
  ],
  "icons" : {
    "48" : "./image/sandwich-48.png",
    "128" : "./image/sandwich-128.png"
  },
  "manifest_version": 2
}
